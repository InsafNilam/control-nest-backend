{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "paths": { "~/*": ["./src/*"] },
    "target": "ESNext"
  },
  "include": ["global.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
